{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Script Debug",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
              "exec", 
              "${env:USERPROFILE}/.dotnet/tools/.store/dotnet-script/1.1.0/dotnet-script/1.1.0/tools/netcoreapp2.1/any/dotnet-script.dll", 
              "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true
        }
    ]
}